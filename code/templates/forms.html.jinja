{% macro labeledInput(name, label='', value='', type='text', autocomplete='') -%}
    <div class="labeled input">
        <input type={{ type }} placeholder="{{ label }}" value="{{ value }}" name={{ name }} autocomplete={{ autocomplete }}>
        <label for={{ name }}>{{ label }}</label>
    </div>
{%- endmacro %}

{% macro button(label='', action='', class='') -%}
    <button class="button {{class}}" onclick={{action}}>{{label}}</button>
{%- endmacro %}

{% macro labelledHr(label='') -%}
    <hr data-label="{{label}}" class="labelledHr">
{%- endmacro %}

{% macro game(attacker, defender, moves, gameId)%}
    <a href="/games/{{gameId}}">
    <div class="game columns">
        <div class="gameThumbnail rows">
        {% for move in moves.values() %}
            <div class="gameTile" data-occupied-by="{{"x" if move == attacker else "o" if move == defender else "false" }}"></div>
        {% endfor %}
        </div>
        <h1><a href="/user/{{attacker}}">@{{attacker}}</a> vs. <a href="/user/{{defender}}">@{{defender}}</a></h1>
    </div>
    </a>
{%- endmacro %}