{% extends 'base.html.jinja' %}
{% block title %}
Sign Up
{% endblock %}
{% block main %}
<div class="tile rows">
    {% if not username %}
    <form id="signupForm">
        <h1>Sign up</h1>
        {{ forms.labeledInput("username", label="Username") }}
        {{ forms.labeledInput("email", label="E-Mail", type="email") }}
        {{ forms.labeledInput("password", label="Password", type="password", autocomplete="new-password") }}
        {{ forms.button(label="Sign Up", class="primaryAction") }}
    </form>
    <span id="feedBackElement"></span>
    {{ forms.labelledHr(label="or")}}
    {{ forms.button(label="Log in", action="goto('/login')") }}
    <span class="bottom left">
        <a href="/"><span>&xlarr; home</span></a>
    </span>
    {% else %}
    <p>You are allready signed in.</p>
    {{ forms.button(label="Home", action="goto('/')") }}
{% endif %}
</div>
{% endblock %}