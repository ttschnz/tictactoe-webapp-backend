{% extends 'base.html.jinja' %}
{% block title %}Home{% endblock %}
{% block main %}
<div class="tile rows">
    <div class="titleRow">
        {{macros.logo()}}
        <h1>TicTacToe</h1>
    </div>
    {% if username %}      
        {{forms.labelledHr(label="your account")}}
        {{forms.button(label="New game", action="goto('/game')", class="primaryAction")}}
        {{forms.button(label="Join game", action="joinGame()")}}
        {{forms.button(label="View stats", action="showStatistics()")}}
        {{forms.button(label="Log out", action="logout()")}}
        {{forms.labelledHr(label="general")}}
        {{forms.button(label="Browse games", action="browseGames()")}}
    {% else %}
        {{forms.button(label="Play as guest", action="goto('/game')", class="primaryAction")}}
        {{forms.button(label="Browse games", action="browseGames()")}}
        {{forms.labelledHr(label="or")}}
        {{forms.button(label="Create account", action="goto('/signup')")}}
        {{forms.button(label="Log in", action="goto('/login')")}}
    {% endif %}
</div>
{% endblock %}